<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Home"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/foodapplogo"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:text="Q1. When is the order delivered?"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:layout_marginLeft="5dp"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A1. Our suppliers deliver the products within 3-4 days of orders being placed."
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textColor="#f50057"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/line"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:textColor="@color/DarkGreen"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q2. Is delivery free?"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textColor="@color/Black"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A2.Yes,the delivery is absolutely free."
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textColor="#f50057"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/line"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:textColor="@color/DarkGreen"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q3. Will I get my entire order in single delivery?"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textColor="@color/Black"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A3. This depends on the items you have ordered. We have partnered with different suppliers for different products to help you get the best pricing."
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textColor="#f50057"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/line"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:textColor="@color/DarkGreen"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q4. How have you selected these products?"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textColor="@color/Black"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A4. We have show products which have passed our quality tests and are best suited for delivery. We will keep updating our catalog with better products.So Stay tuned!"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textColor="#f50057"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/line"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:textColor="@color/DarkGreen"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q5. Q2. Can I place an order on call?"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textColor="@color/Black"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A5.No,presently we do not accept orders on call.But we will be making it available soon!"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textColor="#f50057"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/line"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:textColor="@color/DarkGreen"
        android:textSize="15sp"
        android:layout_marginTop="10dp"/>

</LinearLayout>