<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    >

    <RelativeLayout
        android:id="@+id/relatives"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imgrestaurantimages"
            android:layout_width="186dp"
            android:layout_height="150dp"
            android:layout_marginRight="240dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txtrestaurantnames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/imgrestaurantimages"
            android:layout_marginTop="25dp"
            android:layout_marginRight="-170dp"
            android:textColor="@color/Black"
            android:text="Gokul Praveen"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtrestaurantprices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtrestaurantnames"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="15dp"
            android:text="280"
            android:textColor="@color/Grey"

            />


        <TextView
            android:id="@+id/txtratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/txtrestaurantprices"
            android:layout_marginTop="60dp"
            android:layout_alignParentRight="true"
            android:text="4.2"
            android:textColor="@color/Yellow"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imghomefavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="355dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/favorites"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>

